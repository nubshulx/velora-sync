# ============================================================================
# VELORA SYNC CONFIGURATION
# ============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# ============================================================================
# REQUIRED: DOCUMENT PATHS
# ============================================================================
# Path to Word document containing requirements (local file or SharePoint URL)
SOURCE_DOCUMENT_PATH=./sample_documents/requirements.docx

# Path to Excel file for test cases (local file or SharePoint URL)
DESTINATION_DOCUMENT_PATH=./sample_documents/testcases.xlsx

# ============================================================================
# REQUIRED: LLM CONFIGURATION
# ============================================================================
# Provider: 'gemini', 'deepseek', 'openai', or 'huggingface'
LLM_PROVIDER=gemini

# Model name (varies by provider):
# - Gemini: gemini-2.0-flash (FREE at makersuite.google.com/app/apikey)
# - DeepSeek: deepseek-chat (FREE tier at platform.deepseek.com)
# - OpenAI: gpt-4-turbo-preview
# - Hugging Face: openai/gpt-oss-20b, meta-llama/Llama-3-70b
LLM_MODEL=gemini-2.0-flash

# API key/token for your chosen provider
API_TOKEN=your_api_key_here

# Custom API endpoint (optional, for DeepSeek or custom providers)
# API_URL=https://api.deepseek.com

# ============================================================================
# OPTIONAL: PROCESSING SETTINGS
# ============================================================================
# Update mode: 'intelligent' (recommended), 'new_only', or 'full_sync'
UPDATE_MODE=intelligent

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Maximum tokens for LLM generation (higher = more detailed test cases)
MAX_TOKENS=2000

# Temperature for generation (0.0-1.0, lower = more deterministic)
TEMPERATURE=0.3

# ============================================================================
# OPTIONAL: SHAREPOINT CONFIGURATION (only if using SharePoint documents)
# ============================================================================
# SHAREPOINT_TENANT_ID=your_tenant_id
# SHAREPOINT_CLIENT_ID=your_client_id
# SHAREPOINT_CLIENT_SECRET=your_client_secret
# SHAREPOINT_SITE_URL=https://yourcompany.sharepoint.com/sites/yoursite

# ============================================================================
# OPTIONAL: UPSTASH REDIS CACHE CONFIGURATION
# ============================================================================
# Upstash Redis is used for distributed caching across runs (useful for CI/CD)
# Get your credentials at: https://console.upstash.com/
# If not configured, local file-based caching is used instead

UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# ============================================================================
# OPTIONAL: ADVANCED SETTINGS (defaults are usually fine)
# ============================================================================
REPORTS_DIR=./reports
CACHE_DIR=./cache
BATCH_SIZE=5
CREATE_BACKUP=true
MAX_RETRIES=3
API_TIMEOUT=300
